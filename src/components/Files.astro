---
import { supabase } from "../lib/supabase";

const { userId } = Astro.props;

const { data, error } = await supabase.storage.from("private").list(userId + "/", {
  limit: 100,
  offset: 0,
  sortBy: {
    column: "name",
    order: "asc",
  },
});

if (error) {
  console.error(error);
}
---

<p class="mt-10">Your files:</p>
<ul class="flex flex-col my-5 space-y-2 max-w-lg">
    {data?.map((file) => (
        <li class="truncate" ><a class="text-sky-400 " href=`https://cseuqirfmbybwrbxjrmy.supabase.co/storage/v1/object/public/private/${userId}/${file.name}`>{file.name}</a></li>
    ))}
</ul>


